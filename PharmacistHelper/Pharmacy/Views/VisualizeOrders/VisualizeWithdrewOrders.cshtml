@model Pharmacy.Models.OrderModel

@{
    ViewBag.Title = "Visualizza Ordini Withdrew";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("VisualizeWithdrewOrders", "VisualizeOrders", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <div>
        <h4>Cod. Fiscale Utente: @Model.Orders.First()  </h4>

        <table>
            <tr>
                <th>Cod. Fiscale Utente</th>
                <th>Scadenza Ordine</th>
                <th></th>
            </tr>
            @foreach (var order in @Model.Orders)
            {
                <tr>
                    <td>@order.UserFiscalCode</td>
                    <td>order.ExpirationDateTime</td>
                    <td>@Html.ActionLink("Dettaglio ordine", "VisualizeOrderDetails",new { id = order.Id})</td>
                </tr>
            }
        </table>

        <div class="text-danger" align="center">
            @Html.Raw(ViewBag.Error)
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}